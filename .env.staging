# Server Configuration
NODE_ENV=staging
PORT=3000
API_URL=https://taskify-staging.azurewebsites.net
FRONTEND_URL=https://taskify-staging.azurewebsites.net

# Database Configuration
DB_HOST=taskify-staging-db.postgres.database.azure.com
DB_PORT=5432
DB_NAME=taskify
DB_USER=taskify_admin
DB_PASSWORD=staging_password_placeholder

# Authentication
JWT_SECRET=staging_jwt_secret_placeholder
JWT_EXPIRATION=24h

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_placeholder
STRIPE_WEBHOOK_SECRET=whsec_placeholder

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Email Service
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=staging@taskify.com
EMAIL_PASSWORD=staging_email_password_placeholder
EMAIL_FROM=noreply-staging@taskify.com 